<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/welcome4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/darkBlue"
    android:orientation="vertical">


    <TextView
        android:id="@+id/gFit_txt"
        style="@style/textStyleWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/margin_half"
        android:layout_marginTop="@dimen/margin_wide"
        android:layout_marginEnd="@dimen/margin_half"
        android:text="@string/gfit"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/welcome4_image_ImgView"
        style="@style/ImageStyle"
        android:layout_alignTop="@id/gFit_txt"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="175dp"
        android:contentDescription="@string/woman_hitt"
        app:srcCompat="@drawable/drawable_woman_hitt" />

    <TextView
        android:id="@+id/team_txtView"
        style="@style/textStyleWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome4_image_ImgView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="20dp"
        android:text="@string/join_team"
        android:textAlignment="center"
        android:textColor="@color/green" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/next_btn4"
        style="@style/MaterialButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:contentDescription="@string/next_button"
        tools:ignore="RedundantDescriptionCheck" />

</RelativeLayout>